# ============================================
# E-Commerce Microservices Environment Config
# ============================================
# 
# This file contains example environment variables for local development.
# Copy this to .env and update with your actual values:
#   cp .env.example .env
#
# IMPORTANT: DO NOT commit .env to version control!
#
# CI/CD Note: The GitHub Actions workflows use hardcoded test values
#             directly in the workflow files. No external secrets needed!

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=securePass123
MONGO_URI=mongodb://admin:securePass123@mongo:27017/ecommerce?authSource=admin
MONGO_DATABASE=ecommerce

# Backend Configuration
BACKEND_PORT=3847
BACKEND_URL=http://backend:3847

# Gateway Configuration
GATEWAY_PORT=5921

# Environment
NODE_ENV=development
